<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Controller.NovaConsultaController"
            prefWidth="500" 
            prefHeight="400">
    
    <Label layoutX="20" layoutY="20" text="Nova Consulta" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Label layoutX="20" layoutY="70" text="Paciente:"/>
    <ComboBox fx:id="comboPacientes" layoutX="100" layoutY="65" prefWidth="300"/>
    
    <Label layoutX="20" layoutY="110" text="Data:"/>
    <DatePicker fx:id="campoData" layoutX="100" layoutY="105" prefWidth="150"/>
    
    <Label layoutX="250" layoutY="110" text="Hora:"/>
    <TextField fx:id="campoHora" layoutX="300" layoutY="105" promptText="HH:mm" prefWidth="80"/>
    
    <Label layoutX="20" layoutY="150" text="Status:"/>
    <ComboBox fx:id="comboStatus" layoutX="100" layoutY="145" prefWidth="150"/>
    
    <Label layoutX="20" layoutY="190" text="Observações:"/>
    <TextArea fx:id="campoObservacoes" layoutX="100" layoutY="185" prefWidth="380" prefHeight="100"/>
    
    <Button fx:id="botaoSalvar" layoutX="150" layoutY="310" text="Salvar" prefWidth="100"/>
    <Button fx:id="botaoCancelar" layoutX="260" layoutY="310" text="Cancelar" prefWidth="100"/>
</AnchorPane>
